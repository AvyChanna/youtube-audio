{
  "name": "Youtube Audio",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Stream only Audio on Youtube",
  "icons": {
    "38": "img/icon38.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "js/global.js"
    ]
  },
  "permissions": [
    "tabs",
	"activeTab",
    "webRequest",
    "*://*/*",
    "webRequestBlocking",
	"webNavigation",
    "storage"
  ],
  "browser_action": {
    "default_title": "Youtube Audio"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "js/youtube_audio.js"
      ],
      "css": [
        "css/youtube_audio.css"
      ],
      "run_at": "document_start"
    }
  ],
  "applications": {
    "gecko": {
      "id": "toolkit@mozilla.org"
    }
  }
}
